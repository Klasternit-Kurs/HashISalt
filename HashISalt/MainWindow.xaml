<Window x:Class="HashISalt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashISalt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<StackPanel>
		<TextBox Name="sifra" Text="{Binding SifraCT, UpdateSourceTrigger=Explicit}" FontSize="24"/>
		<UniformGrid>
			<Button FontSize="24" Click="Unos" >Unos</Button>
			<Button FontSize="24" Click="Provera">Provera</Button>
		</UniformGrid>

	</StackPanel>
</Window>
